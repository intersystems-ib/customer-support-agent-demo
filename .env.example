# =========================
# Core LLM (agent)
# =========================
# Required for the agent (smolagents/OpenAI-compatible chat model)
OPENAI_API_KEY=you-api-key-here

# Optional: override model/base URL if you like
# OPENAI_CHAT_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1


# =========================
# IRIS embedding config
# =========================
# Name of the IRIS Embedding configuration used by EMBEDDING(..., '<name>')
# e.g., created for text-embedding-3-small (1536 dims)
EMBEDDING_CONFIG_NAME=my-openai-config


# =========================
# RAG content (files â†’ chunks)
# Used by scripts/embed_sql.py
# =========================
# Where to read markdown/txt docs from
DOCS_DIR=iris/docs

# Limits & chunking strategy
DOC_BODY_MAX_CHARS=4000
CHUNK_SIZE=800
CHUNK_OVERLAP=150

# Control what gets (re)embedded
REFRESH_DOC_CHUNK_VECTORS=1
REFRESH_PRODUCT_VECTORS=1


# =========================
# Interop / HTTP endpoints
# =========================
# IRIS REST endpoint used by the ShippingStatusTool
IRIS_SHIPPING_STATUS_URL=http://localhost:52773/api/shipping/status

# Optional: request correlation id (header X-Request-Id); if not set, a UUID is generated
# REQUEST_ID=demo-123


# =========================
# Frontends (ports)
# =========================
# Gradio UI port (ui/gradio.py)
PORT=7860


# =========================
# IRIS connection
# =========================
IRIS_HOST=localhost
IRIS_PORT=1972
IRIS_NAMESPACE=USER
IRIS_USERNAME=_SYSTEM
IRIS_PASSWORD=SYS